<div>
  <%= form_for @user do |f| %>

  <p>
    <%= f.label :username %><br>
    <%= f.text_area :username %>
  </p>

  <p>
    <%= f.label :tel %><br>
    <%= f.number_field :tel %>
  </p>

  <p>
    <%= f.label :company %><br>
    <%= f.text_area :company %>
  </p>

  <p>
    <%= f.submit %>
  </p>

  <% end %>

</div>